		JSONArray dataPriv = new JSONArray();
		if(userDataObj.containsKey("result_data") && userDataObj.getJSONObject("result_data").containsKey("dataPriv")){
			dataPriv = userDataObj.getJSONObject("result_data").getJSONArray("dataPriv");
		}
